<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
    </style>

    <style name="PatInfoLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="PatInfoValue" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/patient_entry_value_font_size</item>
        <item name="android:fontFamily">"fonts/Roboto-Light.ttf"</item>
        <item name="android:textColorHighlight">@color/colorPatientEntryHighlightedValue</item>
        <item name="android:textColor">@color/colorPatientEntryNormalValue</item>
        <item name="colorAccent">@color/colorPatientEntryHighlightedValue</item>
    </style>

    <style name="PatInfoNumberPicker" >
        <item name="android:textSize">@dimen/patient_entry_number_picker_font_size</item>
        <item name="android:textColorPrimary">@color/colorPatientEntryNormalValue</item>
    </style>

    <style name="QuestionText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/question_text_font_size</item>
        <item name="android:fontFamily">"fonts/Roboto-Light.ttf"</item>
        <item name="android:textColorHighlight">@color/colorPatientEntryHighlightedValue</item>
        <item name="android:textColor">@color/colorPatientEntryNormalValue</item>
        <item name="colorAccent">@color/colorPatientEntryHighlightedValue</item>
    </style>

    <style name="ReminderText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/reminder_text_font_size</item>
        <item name="android:fontFamily">"fonts/Roboto-Light.ttf"</item>
        <item name="android:textColorHighlight">@color/colorPatientEntryHighlightedValue</item>
        <item name="android:textColor">@color/colorPatientEntryNormalValue</item>
        <item name="colorAccent">@color/colorPatientEntryHighlightedValue</item>
    </style>

    <style name="ReminderTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/reminder_title_font_size</item>
        <item name="android:fontFamily">"fonts/Roboto-Light.ttf"</item>
        <item name="android:textColorHighlight">@color/colorPatientEntryHighlightedValue</item>
        <item name="android:textColor">@color/colorPatientEntryNormalValue</item>
        <item name="colorAccent">@color/colorPatientEntryHighlightedValue</item>
    </style>

    <style name="QuestionChoice" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/question_choice_font_size</item>
        <item name="android:fontFamily">"fonts/Roboto-Light.ttf"</item>
        <item name="android:textColorHighlight">@color/colorPatientEntryHighlightedValue</item>
        <item name="android:textColor">@color/colorPatientEntryNormalValue</item>
        <item name="colorAccent">@color/colorPatientEntryHighlightedValue</item>
    </style>

    <style name="ProgressBarStyleVixiar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDuration">60000</item>
    </style>
</resources>
