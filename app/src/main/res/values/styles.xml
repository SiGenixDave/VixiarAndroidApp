<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="PatInfoLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="PatInfoValue" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/patient_entry_value_font_size</item>
        <item name="android:fontFamily">"fonts/Roboto-Light.ttf"</item>
        <item name="android:textColorHighlight">@color/colorPatientEntryHighlightedValue</item>
        <item name="android:textColor">@color/colorPatientEntryNormalValue</item>
        <item name="colorAccent">@color/colorPatientEntryHighlightedValue</item>
    </style>
    <style name="PatInfoNumberPicker" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/patient_entry_value_font_size</item>
        <item name="android:fontFamily">"fonts/Roboto-Light.ttf"</item>
        <item name="android:textColorHighlight">@color/colorPatientEntryHighlightedValue</item>
        <item name="android:textColor">@color/colorPatientEntryNormalValue</item>
        <item name="colorAccent">@color/colorPatientEntryHighlightedValue</item>
    </style>

    patient_entry_number_picker_font_size
</resources>
