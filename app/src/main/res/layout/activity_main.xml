<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="bottom"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorTopBar"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:fontFamily="fonts/Roboto-Medium.ttf"
            android:text="@string/co_name"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorTitleBar"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:fontFamily="fonts/Roboto-Medium.ttf"
            android:text="@string/tag_line"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="60dp">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="@dimen/main_screen_icon_size"
                android:layout_height="@dimen/main_screen_icon_size"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/start_button"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="fonts/Roboto-Light.ttf"
                android:paddingStart="50dp"
                android:text="@string/starttest"
                android:textSize="@dimen/main_screen_label_size"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/main_screen_vertical_spacing"
            android:paddingTop="@dimen/main_screen_vertical_spacing"
            android:src="@drawable/divider_line"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="60dp">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="@dimen/main_screen_icon_size"
                android:layout_height="@dimen/main_screen_icon_size"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/settings_button"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="fonts/Roboto-Light.ttf"
                android:paddingStart="50dp"
                android:text="@string/settings"
                android:textSize="@dimen/main_screen_label_size"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/main_screen_vertical_spacing"
            android:paddingTop="@dimen/main_screen_vertical_spacing"
            android:src="@drawable/divider_line"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="60dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="6dp">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="@dimen/main_screen_icon_size"
                android:layout_height="@dimen/main_screen_icon_size"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/manual_button"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="fonts/Roboto-Light.ttf"
                android:paddingStart="50dp"
                android:text="@string/manual"
                android:textSize="@dimen/main_screen_label_size"/>
            />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/main_screen_vertical_spacing"
            android:paddingTop="@dimen/main_screen_vertical_spacing"
            android:src="@drawable/divider_line"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="60dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="6dp">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="@dimen/main_screen_icon_size"
                android:layout_height="@dimen/main_screen_icon_size"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/training_video_button"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="fonts/Roboto-Light.ttf"
                android:paddingStart="50dp"
                android:text="@string/training"
                android:textSize="@dimen/main_screen_label_size"/>
            />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorBottomBar"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:fontFamily="fonts/Roboto-Light.ttf"
            android:text="@string/application_name"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:fontFamily="fonts/Roboto-Medium.ttf"
            android:text="@string/vixiar_web"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"/>

    </LinearLayout>

</android.widget.LinearLayout>
