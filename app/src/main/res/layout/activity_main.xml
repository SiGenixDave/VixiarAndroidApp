<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:text="  Patient Entry"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="28sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/patient_entry_first_col_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/subject_id"/>

        <EditText
            android:id="@+id/edTxtSubjectId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_rectangle"
            android:hint="@string/subject_id"
            android:inputType="text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="@dimen/patient_entry_first_col_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/subject_info"/>

        <EditText
            android:id="@+id/edTxtSubjectInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_rectangle"
            android:gravity="center"
            android:hint="@string/subject_info"
            android:inputType="text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/patient_entry_first_col_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/systolic_blood_pressure"/>

        <EditText
            android:id="@+id/edTxtSystolicBloodPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_rectangle"
            android:digits="0123456789"
            android:ellipsize="start"
            android:gravity="center"
            android:hint="@string/systolic_blood_pressure"
            android:inputType="number"
            android:maxLength="3"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="@string/milligrams_mercury"
            android:textAlignment="viewStart"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="@dimen/patient_entry_first_col_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/diastolic_blood_pressure"
            android:textAlignment="viewStart"/>

        <EditText
            android:id="@+id/edTxtDiastolicBloodPressure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@drawable/edittext_rectangle"
            android:digits="0123456789"
            android:ellipsize="start"
            android:gravity="center"
            android:hint="@string/diastolic_blood_pressure"
            android:inputType="number"
            android:maxLength="3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="0.15"

            android:text="@string/milligrams_mercury"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/patient_entry_first_col_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/height"/>

        <EditText
            android:id="@+id/edTxtHeightFeet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:background="@drawable/edittext_rectangle"
            android:digits="0123456789"

            android:ellipsize="start"
            android:gravity="center"
            android:hint="@string/feet"
            android:inputType="number"
            android:maxLength="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"

            android:layout_weight="0.1"
            android:text="@string/ft"
            android:textAlignment="viewStart"
            android:textSize="@dimen/patient_entry_font_size"/>

        <EditText
            android:id="@+id/edTxtHeightInches"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:background="@drawable/edittext_rectangle"
            android:digits="0123456789"
            android:ellipsize="start"

            android:gravity="center"
            android:hint="@string/inches"
            android:inputType="number"
            android:maxLength="2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"

            android:layout_weight="0.2"
            android:text="@string/in"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/patient_entry_first_col_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/weight"/>

        <EditText
            android:id="@+id/edTxtWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@drawable/edittext_rectangle"
            android:digits="0123456789"

            android:ellipsize="start"
            android:gravity="center"
            android:hint="@string/weight"
            android:inputType="number"
            android:maxLength="3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="0.15"

            android:text="@string/lbs"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/patient_entry_first_col_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/birthdate"/>

        <EditText
            android:id="@+id/edTxtBirthdateMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:background="@drawable/edittext_rectangle"
            android:digits="0123456789"
            android:ellipsize="start"
            android:gravity="center"

            android:hint="@string/month_txt"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="@dimen/patient_entry_font_size"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/month"

            android:textAlignment="viewStart"
            android:textSize="@dimen/patient_entry_font_size"/>

        <EditText
            android:id="@+id/edTxtBirthdateDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:background="@drawable/edittext_rectangle"
            android:digits="0123456789"

            android:ellipsize="start"
            android:gravity="center"
            android:hint="@string/day_txt"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="@dimen/patient_entry_font_size"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"

            android:layout_weight="1"
            android:text="@string/day"
            android:textAlignment="viewStart"
            android:textSize="@dimen/patient_entry_font_size"/>

        <EditText
            android:id="@+id/edTxtBirthdateYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@drawable/edittext_rectangle"
            android:digits="0123456789"
            android:ellipsize="start"
            android:gravity="center"

            android:hint="@string/year_txt"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="@dimen/patient_entry_font_size"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="2"

            android:text="@string/year"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/patient_entry_first_col_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/gender"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation='horizontal'>

            <RadioButton
                android:id="@+id/radioButton82"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"

                android:text="@string/male"/>

            <RadioButton
                android:id="@+id/radioButton83"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"

                android:text="@string/female"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imViewTrainingButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="imageTrainingClick"
            android:src="@drawable/training_button"/>

        <ImageView
            android:id="@+id/imViewNextButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:clickable="true"
            android:cropToPadding="false"
            android:onClick="imageNextClick"
            android:src="@drawable/arrow_right"/>

    </LinearLayout>
</LinearLayout>



