<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foregroundGravity="bottom"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <include
        android:id="@+id/topBar"
        layout="@layout/top_bar_layout"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_bar"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/topBar"
        android:layout_centerInParent="true"
        android:background="@color/colorLightGray"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/resultsInfoBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/results_summary_bar_height"
            android:background="@color/colorMainBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:gravity="right"
                android:paddingRight="10sp"
                android:text="ID:"
                android:textSize="@dimen/results_summary_bar_font_size"/>

            <TextView
                android:id="@+id/txtPatID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:text="PatID"
                android:textSize="@dimen/results_summary_bar_font_size"/>

            <TextView
                android:id="@+id/txtDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:gravity="right"
                android:paddingRight="30sp"
                android:text="23 August 2017  11:43"
                android:textSize="@dimen/results_summary_bar_font_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/measurement1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/results_measurement_bar_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMeasurement1Checkbox"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/measurement_unchecked"/>

            <TextView
                android:id="@+id/lblM1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:text="@string/measurement1"
                android:textSize="@dimen/results_measurement_font_size"/>

            <TextView
                android:id="@+id/lblRes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:text="@string/LVEDP"
                android:textSize="@dimen/results_measurement_font_size"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/main_screen_vertical_spacing"
            android:paddingTop="@dimen/main_screen_vertical_spacing"
            android:src="@drawable/divider_line"/>

        <LinearLayout
            android:id="@+id/measurement2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/results_measurement_bar_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMeasurement2Checkbox"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/measurement_unchecked"/>

            <TextView
                android:id="@+id/lblM2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:text="@string/measurement2"
                android:textSize="@dimen/results_measurement_font_size"/>

            <TextView
                android:id="@+id/lblRes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:text="@string/LVEDP"
                android:textSize="@dimen/results_measurement_font_size"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/main_screen_vertical_spacing"
            android:paddingTop="@dimen/main_screen_vertical_spacing"
            android:src="@drawable/divider_line"/>

        <LinearLayout
            android:id="@+id/measurement3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/results_measurement_bar_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMeasurement3Checkbox"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/measurement_unchecked"/>

            <TextView
                android:id="@+id/lblM3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:text="@string/measurement3"
                android:textSize="@dimen/results_measurement_font_size"/>

            <TextView
                android:id="@+id/lblR3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_light"
                android:text="@string/LVEDP"
                android:textSize="@dimen/results_measurement_font_size"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/main_screen_vertical_spacing"
            android:paddingTop="@dimen/main_screen_vertical_spacing"
            android:src="@drawable/divider_line"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="false"
        android:background="@color/colorBottomBar"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <ImageView
            android:id="@+id/imgRestIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:paddingBottom="@dimen/main_screen_vertical_spacing"
            android:paddingTop="@dimen/main_screen_vertical_spacing"
            android:src="@drawable/rest_period_icon"/>

        <TextView
            android:id="@+id/lblRest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgRestIcon"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:gravity="right"
            android:paddingEnd="10sp"
            android:text="@string/rest_period"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/bottom_bar_font_size"/>

        <TextView
            android:id="@+id/txtMessage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txtCountdown"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:gravity="right"
            android:paddingEnd="10sp"
            android:text="@string/test_will_resume"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/bottom_bar_font_size"/>

        <TextView
            android:id="@+id/txtCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_normal_family"
            android:text="5"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/bottom_bar_countdown_font_size"/>

    </RelativeLayout>

</android.widget.RelativeLayout>
