            <RadioGroup
                android:id="@+id/radioQ6"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioSame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Same"
                    android:textAppearance="@style/QuestionChoice" />

                <RadioButton
                    android:id="@+id/radioBetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Better"
                    android:textAppearance="@style/QuestionChoice" />

                <RadioButton
                    android:id="@+id/radioWorse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Worse"
                    android:textAppearance="@style/QuestionChoice" />

                <RadioButton
                    android:id="@+id/radioMuchWorse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Much Worse"
                    android:textAppearance="@style/QuestionChoice" />

            </RadioGroup>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/main_screen_vertical_spacing"
                android:paddingTop="@dimen/main_screen_vertical_spacing"
                android:src="@drawable/divider_line"/>


        </LinearLayout>

    </ScrollView>

    <include layout="@layout/bottom_bar_layout"/>


</android.widget.LinearLayout>
