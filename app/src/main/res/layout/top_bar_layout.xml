<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/barLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorTopBar">

        <Button
            android:id="@+id/navButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:fontFamily="@font/roboto_light_family"
            android:paddingStart="20dp"
            android:text="Button"
            android:textColor="@color/colorTopBarText"
            android:textSize="@dimen/top_bar_button_font_size"/>

        <TextView
            android:id="@+id/txtScreenName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:fontFamily="@font/roboto_light_family"
            android:text="Title"
            android:textColor="@color/colorTopBarText"
            android:textSize="@dimen/top_bar_title_font_size"/>

        <ImageView
            android:id="@+id/batteryIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="fitEnd"
            android:src="@drawable/battery_4"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/batteryIcon"
        android:layout_weight="1"
        android:background="@color/colorTitleBar"/>

</LinearLayout>
